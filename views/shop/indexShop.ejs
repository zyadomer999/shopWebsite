<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="css/shop/indexShop.css" />
  </head>
  <body>
    <%- include('../includes/header.ejs')%>
    <main>
      <div id="itemsContainer">
        <% products.forEach((product)=>{ %>
        <div class="product">
          <div>
            <h1><%= product.title %></h1>
          </div>
          <div>
            <img src="<%= product.img %>" />
          </div>
          <div>
            <h2><%= product.price %>$</h2>
          </div>
          <div>
            <p><%= product.description %></p>
          </div>
          <div>
            <% if (product.addedToCart == "no") { %>
            <button class="addToCartBtn">
              <a href="/cart/addToCart/<%= product.id %>">Add to Cart</a>
            </button>
            <% } else { %>
            <button class="removeFromCartBtn">
              <a href="/cart/removeFromCart/<%= product.id %>">Remove from Cart</a>
            </button>
            <% } %>
          </div>
        </div>
        <%})%>
      </div>
    </main>
  </body>
</html>
